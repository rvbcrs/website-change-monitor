{
    "openapi": "3.1.0",
    "info": {
        "title": "DeltaWatch API",
        "description": "Website Change Monitor API - Track changes on any website",
        "version": "1.0.0",
        "contact": {
            "name": "DeltaWatch"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Local development"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                }
            },
            "Monitor": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "url": {
                        "type": "string"
                    },
                    "selector": {
                        "type": "string"
                    },
                    "interval": {
                        "type": "string",
                        "enum": [
                            "1m",
                            "5m",
                            "30m",
                            "1h",
                            "8h",
                            "24h",
                            "1w"
                        ]
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "text",
                            "visual"
                        ]
                    },
                    "name": {
                        "type": "string"
                    },
                    "active": {
                        "type": "boolean"
                    },
                    "tags": {
                        "type": "string"
                    },
                    "keywords": {
                        "type": "string"
                    },
                    "last_check": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "last_value": {
                        "type": "string"
                    },
                    "last_change": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "HealthCheck": {
                "type": "object",
                "properties": {
                    "server": {
                        "type": "string"
                    },
                    "database": {
                        "type": "string"
                    },
                    "browser": {
                        "type": "string"
                    },
                    "browserPool": {
                        "type": "object",
                        "properties": {
                            "total": {
                                "type": "integer"
                            },
                            "inUse": {
                                "type": "integer"
                            },
                            "available": {
                                "type": "integer"
                            }
                        }
                    },
                    "uptime": {
                        "type": "integer"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "responseTime": {
                        "type": "integer"
                    }
                }
            }
        }
    },
    "paths": {
        "/api/health": {
            "get": {
                "tags": [
                    "Health"
                ],
                "summary": "Health check",
                "description": "Get server health status including database and browser availability",
                "responses": {
                    "200": {
                        "description": "All systems operational",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HealthCheck"
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "One or more systems unavailable"
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register new user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 6
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User registered successfully"
                    },
                    "400": {
                        "description": "Invalid input or email already exists"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "user": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "integer"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "role": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/api/monitors": {
            "get": {
                "tags": [
                    "Monitors"
                ],
                "summary": "Get all monitors",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "tags",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Filter by tags (comma-separated)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of monitors",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Monitor"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/monitors": {
            "post": {
                "tags": [
                    "Monitors"
                ],
                "summary": "Create monitor",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "url",
                                    "selector",
                                    "interval"
                                ],
                                "properties": {
                                    "url": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "selector": {
                                        "type": "string"
                                    },
                                    "interval": {
                                        "type": "string",
                                        "enum": [
                                            "1m",
                                            "5m",
                                            "30m",
                                            "1h",
                                            "8h",
                                            "24h",
                                            "1w"
                                        ]
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "text",
                                            "visual"
                                        ],
                                        "default": "text"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "tags": {
                                        "type": "string"
                                    },
                                    "keywords": {
                                        "type": "string"
                                    },
                                    "notify_config": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Monitor created"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/api/monitors/{id}": {
            "put": {
                "tags": [
                    "Monitors"
                ],
                "summary": "Update monitor",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Monitor"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Monitor updated"
                    },
                    "404": {
                        "description": "Monitor not found"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Monitors"
                ],
                "summary": "Delete monitor",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Monitor deleted"
                    },
                    "404": {
                        "description": "Monitor not found"
                    }
                }
            }
        },
        "/monitors/{id}/check": {
            "post": {
                "tags": [
                    "Monitors"
                ],
                "summary": "Trigger manual check",
                "description": "Rate limited to 10 requests per minute",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Check initiated"
                    },
                    "429": {
                        "description": "Rate limit exceeded"
                    }
                }
            }
        },
        "/monitors/{id}/history": {
            "get": {
                "tags": [
                    "History"
                ],
                "summary": "Get monitor history",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 50
                        }
                    },
                    {
                        "name": "offset",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 0
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "History entries"
                    }
                }
            }
        },
        "/settings": {
            "get": {
                "tags": [
                    "Settings"
                ],
                "summary": "Get settings",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Current settings"
                    }
                }
            },
            "put": {
                "tags": [
                    "Settings"
                ],
                "summary": "Update settings",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email_enabled": {
                                        "type": "boolean"
                                    },
                                    "email_host": {
                                        "type": "string"
                                    },
                                    "email_port": {
                                        "type": "integer"
                                    },
                                    "email_user": {
                                        "type": "string"
                                    },
                                    "email_pass": {
                                        "type": "string"
                                    },
                                    "email_to": {
                                        "type": "string"
                                    },
                                    "email_from": {
                                        "type": "string"
                                    },
                                    "push_enabled": {
                                        "type": "boolean"
                                    },
                                    "push_type": {
                                        "type": "string"
                                    },
                                    "push_key1": {
                                        "type": "string"
                                    },
                                    "push_key2": {
                                        "type": "string"
                                    },
                                    "ai_enabled": {
                                        "type": "boolean"
                                    },
                                    "ai_provider": {
                                        "type": "string"
                                    },
                                    "ai_api_key": {
                                        "type": "string"
                                    },
                                    "ai_model": {
                                        "type": "string"
                                    },
                                    "webhook_enabled": {
                                        "type": "boolean"
                                    },
                                    "webhook_url": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Settings updated"
                    }
                }
            }
        },
        "/test-notification": {
            "post": {
                "tags": [
                    "Notifications"
                ],
                "summary": "Send test notification",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "email",
                                            "push"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Notification sent"
                    },
                    "500": {
                        "description": "Failed to send"
                    }
                }
            }
        },
        "/api/admin/logs": {
            "get": {
                "tags": [
                    "Admin"
                ],
                "summary": "Get error logs",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "level",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "error",
                                "warn",
                                "info"
                            ]
                        }
                    },
                    {
                        "name": "source",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "scheduler",
                                "api",
                                "browser",
                                "auth",
                                "notification"
                            ]
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 50
                        }
                    },
                    {
                        "name": "offset",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 0
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Log entries"
                    },
                    "403": {
                        "description": "Admin access required"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Admin"
                ],
                "summary": "Clear logs",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "days_old",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Delete logs older than X days"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Logs cleared"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Health",
            "description": "System health endpoints"
        },
        {
            "name": "Authentication",
            "description": "User authentication"
        },
        {
            "name": "Monitors",
            "description": "Monitor management"
        },
        {
            "name": "History",
            "description": "Check history"
        },
        {
            "name": "Settings",
            "description": "Application settings"
        },
        {
            "name": "Notifications",
            "description": "Notification testing"
        },
        {
            "name": "Admin",
            "description": "Admin-only endpoints"
        }
    ]
}